
  <div class="contents row" >
    <% @tweets.each do |tweet| %>
      <div class="content_post">
        <%= tweet.text %>
        <span class="name">
          <a href="">
            <%= tweet.user.nickname %>
          </a>
        </span>
        <% if user_signed_in? && current_user.id == tweet.user_id %>
          <div class="more">
            <ul class="more_list">
              <li>
               <%= link_to '編集', "/tweets/#{tweet.id}/edit", method: :get %>
              </li>
              <li>
                <%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
    <% end %>
  <%= paginate(@tweets) %>
  </div>
